<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.niki.berrybear.Tabs.HomeActivity"
    android:id="@+id/Home">


    <ImageButton
        android:id="@+id/Down"
        android:src="@mipmap/ic_down"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:longClickable="true"
        tools:layout_editor_absoluteY="280dp"
        tools:layout_editor_absoluteX="167dp"
        android:layout_marginBottom="172dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:layout_toLeftOf="@+id/Right"
        android:layout_toStartOf="@+id/Right" />

    <ImageButton
        android:id="@+id/Right"
        android:src="@mipmap/ic_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Down"
        android:layout_toRightOf="@+id/Up"
        android:layout_toEndOf="@+id/Up"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteY="230dp"
        tools:layout_editor_absoluteX="217dp" />

    <ImageButton
        android:id="@+id/Left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Down"
        android:layout_toLeftOf="@+id/Down"
        android:layout_toStartOf="@+id/Down"
        android:background="@android:color/transparent"
        android:cropToPadding="true"
        android:src="@mipmap/ic_left"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="230dp" />

    <ImageButton
        android:id="@+id/Up"
        android:src="@mipmap/ic_up"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/Right"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="178dp" />

    <ImageButton
        android:id="@+id/light"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_light_off"
        android:background="@android:color/transparent"
        android:layout_marginBottom="34dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Right"
        android:layout_toEndOf="@+id/Right" />

</RelativeLayout>
