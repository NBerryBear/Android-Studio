<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4B0082" />
            <gradient android:angle="-90" android:startColor="#7C40B7" android:endColor="#9932CC"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4B0082" />
            <solid android:color="#7C40B7"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#4B0082" />
            <gradient android:angle="-90" android:startColor="#9932CC" android:endColor="#7C40B7" />
        </shape>
    </item>
</selector>